<%= link_to t("users.show.back"),  course_subjects_path(@course)%> <hr/>

<%=form_for UserSubject.create do |f| %>
  <%=f.hidden_field :subject_id,value: @subject.id %>
  <% unless learn?@subject.id%>
    <div class="col-sm-4 col-lg-4">
      <%=f.submit t("subject.start"), class: "btn btn-primary btn-lg btn-block submit-btn start-btn"%>
    </div>

    <div class="col-sm-4 col-lg-4">
      <%= link_to t("subject.see_report"), course_subject_reports_path(@course, @subject),
        class: "btn btn-info btn-lg btn-block"  %>
    </div>

    <div class="col-sm-4 col-lg-4">
      <%= link_to t("subject.write_report"), new_course_subject_report_path(@course, @subject),
        class: "btn btn-info btn-lg btn-block" %>
    </div>

    <div class="container content">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="panel panel-default session">
            <div class="panel-heading">
              <h3 class="text-center">
                <%= @subject.name + ": " + @subject.description%>
              </h3>
            </div>
            <div class="panel-body">
              <p> <%= @subject.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-sm-4 col-lg-4">
      <%= link_to t("subject.see_report"), course_subject_reports_path(@course, @subject),
        class: "btn btn-info btn-lg btn-block"  %>
    </div>
    <div class="col-sm-4 col-lg-4">
      <%= link_to t("subject.write_report"), new_course_subject_report_path(@course, @subject),
        class: "btn btn-info btn-lg btn-block" %>
    </div>
    <div class="col-sm-4 col-lg-4">
      <%= link_to t("test.title"), new_course_subject_test_path(@course, @subject) ,
        class: "btn btn-danger btn-lg btn-block" %>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="panel panel-default session">
            <div class="panel-heading">
              <h3 class="text-center">
                <%= @subject.name + ": " + @subject.description%>
              </h3>
            </div>
            <div class="panel-body">
              <p> <%= @subject.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

<% end %>
