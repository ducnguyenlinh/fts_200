<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default session">
        <div class="panel-heading">
          <h3 class="text-center"><%= t "devise.signin.title" %></h3>
        </div>
        <div class="panel-body">
          <div class="col-sm-12">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true,class: "form-control",
                  placeholder: t("devise.email.title") %>
              </div>
              <br>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off",
                  class: "form-control", placeholder: t("devise.password.title") %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
              <br>
              <div class="actions">
                <%= f.submit t("devise.login.title"), class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-sm-12 text-center">
            <hr>
            <%- if devise_mapping.registerable? && controller_name != "registrations" %>
              <%= link_to t("devise.signup.need_account"), new_registration_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
