<%= link_to t("users.show.back"), course_subject_path(@course, @subject)%><hr/>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="panel panel-default session">
        <div class="panel-heading">
          <h3 class="text-center"> <%= t "report.all_report" %> </h3>
        </div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
            <tr>
              <th><%= t "course.title" %></th>
              <th><%= t "report.time_at" %></th>
            </tr>
            </thead>

            <tbody>
              <% @reports.each do |report| %>
                <tr>
                  <td><%= report.course_name %></td>
                  <td>
                    <abbr class="timeago" title="<%= report.created_at.getutc.iso8601 %>">
                      <%= report.created_at.to_s %>
                    </abbr>
                  </td>
                  <td>
                    <%= link_to t("report.show"), course_subject_report_path(@course, @subject, report),
                      class: "btn btn-primary btn-block" %>
                  </td>

                  <td>
                    <%= link_to t("devise.registrations.edit"),  edit_course_subject_report_path(@course, @subject, report),
                      class: "btn btn-primary btn-block"%>
                  </td>

                  <td>
                    <%= link_to t("report.delete"),course_subject_report_path(@course, @subject, report),
                      data: {confirm: t("report.confirm")}, class: "btn btn-danger btn-block", method: :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
