<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default session">
        <div class="panel-heading">
          <h2 class="text-center"><%= t "history.all_history" %></h2>
        </div>

        <div class="panel-body">
          <table class="table table-hover">
            <thead>
            <tr>
              <th><%= t "users.show.name" %></th>
              <th><%= t "course.title" %></th>
              <th><%= t "subject.title" %></th>
              <th><%= t "report.time_at" %></th>
            </tr>
            </thead>

            <tbody>
            <% @histories.each do |hitory| %>
              <tr>
                <td><%= hitory.user.name %></td>
                <td><%= hitory.course.name %></td>
                <td><%= hitory.subject.name %></td>
                <td>
                  <abbr class="timeago" title="<%= hitory.created_at.getutc.iso8601 %>">
                    <%= hitory.created_at.to_s %>
                  </abbr>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>

          <%= paginate @histories, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
